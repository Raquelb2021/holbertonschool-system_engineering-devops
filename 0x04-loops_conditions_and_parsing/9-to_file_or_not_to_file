#!/usr/bin/env bash
#Script that gives information the school file	
x=school
if [ -e $x ]; then
	       echo "school files exist"
if [ -s $x ]; then
	     echo "school file is not empty"
     else 
	     echo "school file is empty"
	    fi
if [ -f $x ]; then
	echo "school is a regular file"
else
	echo "school file does not exist"
fi
